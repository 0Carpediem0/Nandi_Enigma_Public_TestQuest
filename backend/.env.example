# Скопируйте в .env и подставьте свои значения.
# В Docker эти переменные задают через docker-compose или -e при запуске.
# Файл .env в репозиторий не коммитить (пароль!).

# Rambler
EMAIL_USER=your_login@rambler.ru
# Если включена 2FA в Rambler — используй специальный пароль для почтового клиента.
EMAIL_PASSWORD=your_rambler_password_or_app_password

# Серверы Rambler
IMAP_HOST=imap.rambler.ru
IMAP_PORT=993
SMTP_HOST=smtp.rambler.ru
SMTP_PORT=587

# Кому отправлять результат MVP-обработки (оператор техподдержки)
OPERATOR_EMAIL=your_operator@rambler.ru

# Опрос почты каждые N секунд (0 = выключен). При 30 раз в 30 с забирается последнее письмо и обрабатывается с AI.
POLL_EMAIL_EVERY_SEC=30

# PostgreSQL (runtime для тикетов/KB)
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=postgres
PGDATABASE=test

# AI pipeline feature flags (rollout A->E)
BERT_ENABLED=true
RAG_ENABLED=true
QWEN_ENABLED=true
AUTO_SEND_ENABLED=false

# AI tuning
AI_PIPELINE_VERSION=v1
BERT_MODEL_NAME=bert-base-multilingual-cased
QWEN_MODEL_NAME=Qwen/Qwen2.5-3B-Instruct
RETRIEVER_TOP_K=3
AUTO_SEND_CONFIDENCE_THRESHOLD=0.92
MAX_DRAFT_CHARS=1200
BERT_MAX_CHARS=2000
QWEN_MAX_NEW_TOKENS=220
QWEN_TEMPERATURE=0.2
